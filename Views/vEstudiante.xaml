<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acentenoS6B.Views.vEstudiante"
             Title="vEstudiante">
    <VerticalStackLayout>
        <Label 
            Text="semana 6: Ws"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView x:Name="lvEstudiantes" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="10" Padding="10" BorderColor="Gray" CornerRadius="8">
                            <Grid ColumnDefinitions="*,*,Auto">
                                <Label Grid.Column="0" Text="{Binding nombre}" FontAttributes="Bold" FontSize="Medium"/>
                                <Label Grid.Column="1" Text="{Binding apellido}" FontSize="Small" TextColor="Gray"/>
                                <Label Grid.Column="2" Text="{Binding edad}" FontSize="Small" HorizontalOptions="End"/>
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>